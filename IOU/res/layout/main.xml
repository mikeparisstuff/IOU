<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/black" >

    <Button
            android:id="@+id/home_owe_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/home_owe_background"
            android:text="@string/owe" />

    <Button
            android:id="@+id/home_owed_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/home_owed_background"
            android:text="@string/owed" />

</LinearLayout>